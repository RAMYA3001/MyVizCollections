                                        double remainingTATHours;

                                        if (isFinalStatus60 && asset.FinalStatusDt.HasValue)
                                        {
                                            remainingTATHours = (deliveryOn.Value - asset.FinalStatusDt.Value).TotalHours;
                                        }
                                        else
                                        {
                                            remainingTATHours = (deliveryOn.Value - DateTime.Now).TotalHours;
                                        }

                                        // Ensure non-negative
                                        remainingTATHours = Math.Max(remainingTATHours, 0);

                                        int hours = (int)remainingTATHours;
                                        int minutes = (int)Math.Round((remainingTATHours - hours) * 60);

                                        // Handle edge case where minutes round to 60
                                        if (minutes == 60)
                                        {
                                            hours += 1;
                                            minutes = 0;
                                        }

                                        // Convert minutes to base-100-style decimal
                                        double finalTime = Math.Round(hours + (minutes / 100.0), 2);

