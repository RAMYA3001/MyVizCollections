            margin-top: 20px;
            font-family: 'Numans', sans-serif;
        }


            .link-bar a {
                color: purple;
                text-decoration: none;
                font-size:14px;
                margin: 0 15px;
                font-weight: bold;
            }

                .link-bar a:hover {
                    text-decoration: underline;
                    color: Black;
                }


        .btn-primary {
