@model MyVizCollections.Models.User

@{
    Layout = null;
    ViewBag.Title = "Index";
    var bannerMessage = Session["BannerMessage"] as string;
    bool isCustomBanner = Session["IsCustomBanner"] != null && (bool)Session["IsCustomBanner"];
}

<!DOCTYPE html>

<html>
<head>
    <style>
        body {
            background-repeat: no-repeat;
            background-size: cover;
            margin: 0;
            padding: 0;
            height: 100%;
            overflow-x: hidden; 
        }

        html {
            height: 100%;
            overflow-x: hidden; 
        }


        .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            
            margin-top: 92px;
            padding: 0 225px;
        }

       

        #login-container {
            width: 300px;
            background-color: #375b91;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            font-family: 'Numans', sans-serif;
            font-size: 14px;
            color: white;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        .link-bar {
