    $(function () {
        $("#exampleModal").modal("show");
        @*$(".closeredirect").click(function () {

            window.location.href = '@Url.Action("Index", "AllLevelQueueBoard")';


        });*@
        $(".closeredirect").click(function () {
            window.close();
        });
